<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hieult.datphongkhachsan.datphong"
    android:id="@+id/datphong">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phòng 001"
        android:id="@+id/txtphong"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ngày Nhận"
        android:id="@+id/txtngaybd"
        android:layout_below="@+id/txtphong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/edtngaybd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtngaybd"
        android:layout_below="@+id/txtphong"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/txtngaybd"
        android:layout_toEndOf="@+id/txtngaybd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Số CMND"
        android:id="@+id/txtcmnd"
        android:layout_below="@+id/edthoten"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtcmnd"
        android:layout_alignTop="@+id/txtcmnd"
        android:layout_alignRight="@+id/edtngaybd"
        android:layout_alignEnd="@+id/edtngaybd"
        android:layout_toRightOf="@+id/txtphong"
        android:layout_toEndOf="@+id/txtphong" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Họ Tên"
        android:id="@+id/txthoten"
        android:layout_below="@+id/btnphongtrong"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edthoten"
        android:layout_alignTop="@+id/txthoten"
        android:layout_alignLeft="@+id/edtngaybd"
        android:layout_alignStart="@+id/edtngaybd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ngày Trả"
        android:id="@+id/txtngaytr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtngaybd" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtngaytr"
        android:layout_alignRight="@+id/edtngaybd"
        android:layout_alignEnd="@+id/edtngaybd"
        android:layout_below="@+id/txtngaybd"
        android:layout_toRightOf="@+id/txtngaybd"
        android:layout_toEndOf="@+id/txtngaybd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng Trống"
        android:id="@+id/btnphongtrong"
        android:layout_below="@+id/edtngaytr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHÒNG CỦA ABC"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/btnphongtrong"
        android:layout_toRightOf="@+id/btnphongtrong"
        android:layout_toEndOf="@+id/btnphongtrong"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Số Điện Thoại"
        android:id="@+id/txtsdt"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/edtcmnd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:layout_below="@+id/txtsdt"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtsdt"
        android:layout_alignTop="@+id/txtsdt"
        android:layout_alignRight="@+id/edtcmnd"
        android:layout_alignEnd="@+id/edtcmnd"
        android:layout_toRightOf="@+id/txtsdt"
        android:layout_toEndOf="@+id/txtsdt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt Phòng"
        android:id="@+id/btndatphong"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/edtsdt"
        android:layout_alignEnd="@+id/edtsdt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/txtemail"
        android:layout_below="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtemail"
        android:layout_alignTop="@+id/txtemail"
        android:layout_toRightOf="@+id/txtemail"
        android:layout_alignRight="@+id/edtsdt"
        android:layout_alignEnd="@+id/edtsdt" />

</RelativeLayout>
